/* === GOTHAM NEON FLICKER â€” FINAL === */
.zypher-os .os-logo.zypher-title {
  animation:
    neon-flicker 6s infinite,
    neon-drift 12s infinite;
  text-shadow:
    0 0 8px rgba(0,255,255,0.35),
    0 0 18px rgba(0,180,255,0.25);
}

/* short, sharp flicker bursts */
@keyframes neon-flicker {
  0%, 92%, 100% {
    opacity: 1;
    filter: brightness(1);
  }
  93% {
    opacity: 0.55;
    filter: brightness(1.4);
  }
  94% {
    opacity: 0.85;
  }
  95% {
    opacity: 0.6;
  }
  96% {
    opacity: 1;
  }
}

/* ultra-slow horizontal instability */
@keyframes neon-drift {
  0%   { transform: translateX(0); }
  25%  { transform: translateX(0.6px); }
  50%  { transform: translateX(-0.6px); }
  75%  { transform: translateX(0.4px); }
  100% { transform: translateX(0); }
}

/* === BUTTON IDLE LIFE === */
.os-btn {
  animation: button-breathe 8s ease-in-out infinite;
}

@keyframes button-breathe {
  0%, 100% {
    box-shadow: 0 0 0 rgba(0,0,0,0);
  }
  50% {
    box-shadow: 0 0 18px rgba(0,255,255,0.18);
  }
}

/* === LAYOUT TIGHTENING === */
.os-core {
  padding-top: 28vh;
}

.os-actions {
  margin-top: 36px;
  display: flex;
  gap: 22px;
}

/* === GOTHAM NEON FLICKER === */
.zypher-title {
  position: relative;
  animation:
    neon-flicker 4.5s infinite,
    float-drift 8s ease-in-out infinite;
}

@keyframes neon-flicker {
  0%   { opacity: 1; text-shadow: 0 0 12px #00faff; }
  3%   { opacity: 0.4; }
  6%   { opacity: 1; }
  7%   { opacity: 0.1; }
  9%   { opacity: 1; }
  60%  { opacity: 1; }
  62%  { opacity: 0.6; }
  64%  { opacity: 1; }
  100% { opacity: 1; }
}

@keyframes float-drift {
  0%   { transform: translateY(0); }
  50%  { transform: translateY(-6px); }
  100% { transform: translateY(0); }
}

/* === BUTTON CINEMATIC ENTRANCE === */
.os-actions {
  animation: actions-rise 1.2s ease-out forwards;
  opacity: 0;
  animation-delay: 0.6s;
}

@keyframes actions-rise {
  from {
    opacity: 0;
    transform: translateY(18px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.os-btn {
  position: relative;
}

.os-btn::after {
  content: "";
  position: absolute;
  inset: -2px;
  border-radius: inherit;
  opacity: 0;
  transition: opacity .3s;
}

.os-btn:hover::after {
  opacity: 1;
}

/* === HARD FIX: CINEMATIC FLICKER (VISIBLE) === */
.zypher-title {
  opacity: 1 !important;
  animation: zypher-flicker 3.5s infinite;
  text-shadow:
    0 0 12px rgba(0,255,255,0.8),
    0 0 28px rgba(0,255,255,0.6),
    0 0 60px rgba(0,200,255,0.4);
}

@keyframes zypher-flicker {
  0%   { opacity: 0; filter: blur(6px); }
  6%   { opacity: 1; filter: blur(0); }
  8%   { opacity: 0.6; }
  10%  { opacity: 1; }
  60%  { opacity: 1; }
  62%  { opacity: 0.75; }
  64%  { opacity: 1; }
  100% { opacity: 1; }
}

/* === LAYOUT TIGHTEN === */
.os-core {
  transform: translateY(-40px);
}

.os-actions {
  margin-top: 32px !important;
}

