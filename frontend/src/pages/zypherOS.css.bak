.zypher-os {
  position: fixed;
  inset: 0;
  background: #000;
  color: #0ff;
  font-family: Orbitron, system-ui;
  overflow: hidden;
}

.os-noise {
  position: absolute;
  inset: 0;
  background:
    repeating-radial-gradient(circle at 50% 50%,
      rgba(255,255,255,0.02) 0,
      rgba(255,255,255,0.01) 1px,
      transparent 2px);
  animation: flicker 6s infinite;
  pointer-events: none;
}

@keyframes flicker {
  0%,100% { opacity: .35 }
  50% { opacity: .55 }
}

.os-core {
  position: absolute;
  inset: 0;
  display: grid;
  place-items: center;
  text-align: center;
}

.os-logo {
  font-size: 64px;
  letter-spacing: .4em;
  opacity: .15;
  animation: pulse 4s infinite;
}

@keyframes pulse {
  0%,100% { opacity: .12 }
  50% { opacity: .22 }
}

.os-actions {
  display: flex;
  gap: 40px;
  margin-top: 40px;
}

.os-btn {
  padding: 18px 40px;
  background: transparent;
  border: 1px solid currentColor;
  color: inherit;
  letter-spacing: .15em;
  cursor: pointer;
  opacity: .6;
  transition: .3s;
}

.os-btn:hover {
  opacity: 1;
  box-shadow: 0 0 30px currentColor;
}

.os-btn.dev {
  color: #ff3b3b;
}

.os-overlay {
  position: absolute;
  inset: 0;
  background: rgba(0,0,0,.65);
  display: grid;
  place-items: center;
  animation: fadeIn .4s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0 }
  to { opacity: 1 }
}

/* ================================
   GOTHAM NEON FLICKER â€” ZYPHER CORE
   GPU-only, zero layout impact
================================ */

.zypher-title {
  position: relative;
  color: #3cf2ff;
  text-shadow:
    0 0 6px rgba(60,242,255,0.45),
    0 0 18px rgba(60,242,255,0.35),
    0 0 42px rgba(60,242,255,0.25);
  animation:
    zypher-breathe 6.5s ease-in-out infinite,
    zypher-flicker 11s infinite;
  will-change: opacity, filter;
}

/* slow power breathing */
@keyframes zypher-breathe {
  0%, 100% {
    filter: brightness(1) blur(0);
  }
  50% {
    filter: brightness(1.08) blur(0.25px);
  }
}

/* irregular gotham-style flicker */
@keyframes zypher-flicker {
  0%   { opacity: 1; }
  2%   { opacity: 0.92; }
  3%   { opacity: 1; }

  17%  { opacity: 0.96; }
  18%  { opacity: 1; }

  41%  { opacity: 0.78; filter: brightness(0.75) blur(1.2px); }
  42%  { opacity: 1; filter: none; }

  67%  { opacity: 0.94; }
  68%  { opacity: 1; }

  91%  { opacity: 0.86; filter: brightness(0.85) blur(0.8px); }
  92%  { opacity: 1; filter: none; }
}


@keyframes zypher-flicker-hard {
  0%, 100% { opacity: 1; }
  49% { opacity: 1; }
  50% { opacity: 0.65; filter: blur(1.5px) brightness(0.7); }
  51% { opacity: 1; filter: none; }
}

.zypher-title {
  animation:
    zypher-breathe 6.5s ease-in-out infinite,
    zypher-flicker 11s infinite,
    zypher-flicker-hard 22s infinite;
}


