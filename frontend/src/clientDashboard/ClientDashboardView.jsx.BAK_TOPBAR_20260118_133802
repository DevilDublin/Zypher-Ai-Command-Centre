import React, { useEffect, useState } from "react";
import { io } from "socket.io-client";

export default function ClientDashboardView() {
  const [clientState, setClientState] = useState(null);
  const [events, setEvents] = useState([]);
  const [connected, setConnected] = useState(false);

  // Initial client state fetch
  useEffect(() => {
    const clientId = localStorage.getItem("clientId");
    if (!clientId) return;

    fetch("http://localhost:3000/client/state", {
      headers: { "x-client-id": clientId }
    })
      .then(r => r.json())
      .then(setClientState)
      .catch(() => {});
  }, []);

  // Realtime socket connection
  useEffect(() => {
    const clientId = localStorage.getItem("clientId");
    if (!clientId) return;

    const socket = io("http://localhost:3000", {
      extraHeaders: { "x-client-id": clientId }
    });

    socket.on("connect", () => setConnected(true));
    socket.on("disconnect", () => setConnected(false));

    socket.on("notify", (message) => {
      setEvents(prev =>
        [{ message, ts: Date.now() }, ...prev].slice(0, 5)
      );
    });

    return () => socket.disconnect();
    <header className="header">
      <h1>YOUR CLIENT DASHBOARD</h1>
    </header>
  }, []);

  if (!clientState) return null;

  return (
    <>

      <div className="grid">
        <div className="panel">
          <div className="panel-inner">
            <h3>ACCOUNT STATUS</h3>
            <div className="metric">{connected ? "ACTIVE" : "DISCONNECTED"}</div>
          </div>
        </div>

        <div className="panel">
          <div className="panel-inner">
            <h3>TODAY'S ACTIVITY</h3>
            <div className="metric">{events.length}</div>
            <div className="sub"><div className="bar"><div className="bar-fill" style={{ width: Math.min(events.length * 12, 100) + "%" }}></div></div><div className="sub">realtime events</div></div>
<div className="metric-row">
  <span className="metric-big">{events.length}</span>
  <span className="metric-label">events today</span>
</div>          </div>
        </div>

        <div className="panel">
          <div className="panel-inner">
            <h3>LIVE AGENT</h3>
<div className="metric-row">
  <span className={connected ? "dot on" : "dot off"}></span>
  <span className="metric-text">{connected ? "Connected" : "Disconnected"}</span>
</div>
<div className="sub muted">voice agent ready</div>          </div>
          <div className="metric">
            {connected && <div className="pulse on">LISTENING</div>}
            {!connected && "OFFLINE"}
          </div>
        </div>

        <div className="panel">
          <div className="panel-inner">
            <h3>NUMBER PERFORMANCE</h3>
            <div className="metric">—</div>
            <div className="sub"><div className="signal-bars"><span></span><span></span><span></span></div><div className="sub">metrics coming soon</div></div>
<div className="mini-bars">
  <span></span><span></span><span></span><span></span>
</div>          </div>
        </div>

        <div className="panel">
          <div className="panel-inner">
            <h3>SERVICE HEALTH</h3>
          </div>
          <div className="metric">
            {connected && (
              <div className="heartbeat">
                <span className="alive"></span>
                HEALTHY
<div className="metric-row">
  <span className="metric-big">~120ms</span>
  <span className="metric-label">avg latency</span>
</div>
<div className="heartbeat"></div>              </div>
            )}
            {!connected && "DISCONNECTED"}
          </div>
        </div>

        <div className="panel">
          <div className="panel-inner">
            <h3>RECENT EVENTS</h3>
<div className="event-list">
  {events.map((e,i) => (
    <div key={i} className="event-row">{e.message}</div>
  ))}
</div>            <ul className="events">
              {events.map((e, i) => (
                <li key={i}>
                  {new Date(e.ts).toLocaleTimeString()} — {e.message}
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    </>
  );
}
